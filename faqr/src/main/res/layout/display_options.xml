<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fadingEdge="none"
    android:overScrollMode="never" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/theme"
            style="@style/DisplayOptionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme" >
        </TextView>

        <Spinner
            android:id="@+id/theme_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/typface"
            style="@style/DisplayOptionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPEFACE" >
        </TextView>

        <Spinner
            android:id="@+id/typeface_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/font"
            style="@style/DisplayOptionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONO FONT SIZE" >
        </TextView>

        <Spinner
            android:id="@+id/font_size_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/varfont"
            style="@style/DisplayOptionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VARIABLE FONT SIZE" >
        </TextView>

        <Spinner
            android:id="@+id/var_font_size_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:spinnerMode="dialog" />
    </LinearLayout>

</ScrollView>