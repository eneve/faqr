<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppLightOverlayTheme" parent="AppLightTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- THEMES GENERATED - http://android-ui-utils.googlecode.com/hg/asset-studio/dist/index.html -->
    <style name="AppLightTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_faq_light</item>
        <item name="android:popupMenuStyle">@style/faq_light_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/faq_light_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/faq_light_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/faq_light_DropDownNav</item>
        <item name="android:actionBarStyle">@style/faq_light_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_faq_light</item>
        <item name="android:editTextBackground">@drawable/edit_text_holo_dark</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:dropDownItemStyle">@style/Widget.DropDownItemLight</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_faqr_dark</item>
    </style>

    <style name="listviewfastscrollstyle" parent="AppLightTheme">
        <item name="android:fastScrollTrackDrawable">@drawable/fastscroll_thumb_faqr_dark</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_faqr_dark</item>
    </style>

    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <!-- BLACK -->
    <style name="AppBlackOverlayTheme" parent="AppBlackTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppBlackTheme" parent="AppDarkTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- DARK -->

    <style name="AppDarkOverlayTheme" parent="AppDarkTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.Sherlock"></style>

    <!--
    ===============================================================
    
     COMMON TO ALL API LEVELS 
     
     ==============================================================
    -->

    <style name="MonoText" parent="@android:style/Widget.TextView">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MonoTextBold" parent="@android:style/Widget.TextView">
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SansText" parent="@android:style/Widget.TextView">
        <item name="android:typeface">sans</item>
    </style>

    <style name="SerifText" parent="@android:style/Widget.TextView">
        <item name="android:typeface">serif</item>
    </style>

    <style name="AboutSectionTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FF6564FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AboutTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchResultsHeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFEEEEEE</item>
        <item name="android:shadowColor">#222</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    
    <style name="DisplayOptionsTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FFB5B5B5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>
    
    <style name="OptionsAnimationPopup">
        <item name="android:windowEnterAnimation">@anim/options_fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/options_fade_out_anim</item>
    </style>

</resources>