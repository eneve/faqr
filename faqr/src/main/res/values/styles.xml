<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="AppTheme.Base"/>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:dropDownListViewStyle">@style/CustomSpinnerStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CustomSpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#dddddd</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <!--
    ===============================================================

     COMMON TO ALL API LEVELS

     ==============================================================
    -->

    <style name="MonoText" parent="@android:style/Widget.TextView">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MonoTextBold" parent="@android:style/Widget.TextView">
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SansText" parent="@android:style/Widget.TextView">
        <item name="android:typeface">sans</item>
    </style>

    <style name="SerifText" parent="@android:style/Widget.TextView">
        <item name="android:typeface">serif</item>
    </style>

    <style name="AboutSectionTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#FF6564FF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AboutSectionText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AboutTitleText" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchResultsHeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DisplayOptionsTitle" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subtitle_text</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>

    <style name="OptionsAnimationPopup">
        <item name="android:windowEnterAnimation">@anim/options_fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/options_fade_out_anim</item>
    </style>

</resources>